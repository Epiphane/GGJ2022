{
  "compilerOptions": {
    "module": "es6",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": "lib",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx"
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "lib/**/*"
  ]
}
